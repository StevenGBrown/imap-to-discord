{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "bundler",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["bin/**/*", "lib/**/*"]
}
